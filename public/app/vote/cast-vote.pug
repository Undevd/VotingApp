.container
    .well
        form.form-horizontal(name="voteForm" controller="mvVoteCtrl")
            .form-group
                label.col-md-2.control-label(for="voter") Who goes there?
                .col-md-10
                    input.form-control(name="voter", type="text", placeholder="Who goes there?", required, ng-model="voter")
            div(ng-show="isListed(voter)")
                fieldset(ng-repeat="thing in things" ng-hide="isMemberOf(voter, '{{thing.name}}') || '{{thing.name}}' == 'Others' || voter == ''")
                    legend {{thing.name}}
                    .form-group
                        label.col-md-2.control-label(for="concept") Concept
                        .col-md-10
                            select.form-control(id="thing.name-concept" name="concept" ng-model="scores[thing.name]['concept']")
                                option(value="1") 1
                                option(value="2") 2
                                option(value="3") 3
                                option(value="4") 4
                                option(value="5") 5
                                option(value="6") 6
                                option(value="7") 7
                                option(value="8") 8
                                option(value="9") 9
                                option(value="10") 10
                    .form-group
                        label.col-md-2.control-label(for="implementation") Implementation
                        .col-md-10
                            select.form-control(id="thing.name-concept" name="implementation" ng-model="scores[thing.name]['implementation']")
                                option(value="1") 1
                                option(value="2") 2
                                option(value="3") 3
                                option(value="4") 4
                                option(value="5") 5
                                option(value="6") 6
                                option(value="7") 7
                                option(value="8") 8
                                option(value="9") 9
                                option(value="10") 10
                    .form-group
                        label.col-md-2.control-label(for="presentation") Presentation
                        .col-md-10
                            select.form-control(id="thing.name-concept" name="presentation" ng-model="scores[thing.name]['presentation']")
                                option(value="1") 1
                                option(value="2") 2
                                option(value="3") 3
                                option(value="4") 4
                                option(value="5") 5
                                option(value="6") 6
                                option(value="7") 7
                                option(value="8") 8
                                option(value="9") 9
                                option(value="10") 10
                    .form-group(ng-repeat="member in thing.members")
                        label.col-md-2.control-label() {{member.name}}
                .form-group
                    .col-md-10.col-md-offset-2
                        .pull-right
                            button.btn.btn-primary(ng-click="vote(voteForm)", ng-disabled="voteForm.$invalid") Vote
                            | &nbsp;
                            a.btn.btn-default(href="/") Cancel